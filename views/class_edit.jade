extends layout

block stylesheet
  link(rel='stylesheet', href='/css/info_list.css')

block script
  script(src='/js/class_edit.js', type='text/javascript')
  script(src='/js/main_menu.js', type='text/javascript')

block content
  .info.small
    h2.content-title= title

    .info-list
      table
        thead
          tr
            th(class='info-edit')
            th(class='info-id hide') 課程 ID
            th(class='info-name') 課程名稱
            th(class='info-startDate') 課程開始時間
        tbody(id='class-table')

    .info-list.half.hide
      table(id='students')
        thead
          tr
            th(class='info-edit') 有註冊
            th(class='info-id hide') 學生 ID
            th(class='info-name') 學生姓名
        tbody(id='student-table')

    .info-list.half.hide
      table(id='teachers')
        thead
          tr
            th(class='info-edit') 上課
            th(class='info-id hide') 老師 ID
            th(class='info-name') 老師姓名
        tbody(id='teacher-table')

    .info-button-panel
      input(type='button', class='button hide', id='previous',
        value='上一步')
      input(type='button', class='button', id='menu',
        value='回選單')
      input(type='button', class='button hide', id='confirm',
        value='確定修改')
