extends layout

block stylesheet
  link(rel='stylesheet', href='/css/admin.css')
  link(rel='stylesheet', href='/css/card.css')

block script
  script(src='/js/admin.js', type='text/javascript')

block content
  .one-card-container
    .card
      form
        label(for='username') 新使用者名稱
        input(type='text', id='username',
          name='username', class='input-field')
        <br>

        label(for=('password')) 新密碼
        input(type='password', id='password',
          name='password', class='input-field')
        <br>

        label(for=('re-password')) 重新輸入新密碼
        input(type='password', id='re-password',
          name='re-password', class='input-field')
        <br>

        input(type='button', id='submit',
          name='submit', value='送出', class='button')
